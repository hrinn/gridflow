<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="construction.canvas.CanvasExpandViewController">
    <StackPane.margin>
        <Insets />
    </StackPane.margin>
   <children>
      <VBox prefHeight="400.0" prefWidth="400.0">
         <children>
            <VBox alignment="TOP_CENTER">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <children>
                  <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Warning!" />
                  <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Grid is not translated." />
                  <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Decreasing canvas size may produce unexpected results." />
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label layoutX="282.0" layoutY="42.0" text=" Width:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="widthTextBox" maxWidth="175.0" minWidth="175.0" prefWidth="175.0">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Label text="Units">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label layoutX="282.0" layoutY="42.0" text="Height:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="heightTextBox" maxWidth="175.0" minWidth="175.0" prefWidth="175.0">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </TextField>
                  <Label text="Units">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="25.0" />
               </padding>
               <children>
                  <Button mnemonicParsing="false" onAction="#setCanvasSize" text="Apply">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets top="50.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
